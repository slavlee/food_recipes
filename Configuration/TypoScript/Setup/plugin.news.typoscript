plugin.tx_news {
  view {
    templateRootPaths {
      5 = EXT:food_recipes/Resources/Private/Extensions/News/Templates/
    }
    partialRootPaths {
      5 = EXT:food_recipes/Resources/Private/Extensions/News/Partials/
    }
  }

  settings {
    detail {
      stepImage {
        width = {$food_recipes.detail.stepImage.width}
      }
      affiliateImage {
        width = {$food_recipes.detail.affiliateImage.width}
      }
    }
  }
}
